@model WebApplicationGPV.Models.NhomHangHoa

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="textName">THÊM DANH SÁCH NHÂN VIÊN</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="form-group col-sm-12">
                        @Html.Label("MÃ NHÓM HÀNG HÓA", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.ID_NHH, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txtmanhh" })
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.Label("TÊN", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.TenNHH, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txtten" })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-success btn-sm" id="btnSave">Thêm</button>
            <button type="button" class="btn btn-success btn-sm" id="btn-active">Xác nhận</button>
            &nbsp; <button type="button" data-dismiss="modal" class="btn btn-warning btn-sm">Hủy</button>
        </div>
    </div>
</div>

