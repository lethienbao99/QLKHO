                    cmb.children('option').each(function () {
                        if ($(this).val() == value) {
                            cmb.val(value);
                            has = true;
                        }
                    });
                    if (has == false) {
                        alert("Không tồn tại giá trị này, vui lòng kiểm tra lại");
                        return false;
                    }
