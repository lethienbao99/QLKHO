@model WebApplicationGPV.Models.NhaKho

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="textName"></h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <div class="row">
                    @Html.HiddenFor(model => model.ID_NhaKho, new { id = "txtmanhakho" })

                    <div class="form-group col-sm-12">
                        @Html.Label("SỐ TẦNG", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.SoTang, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txttang" })
                    </div>

                    <div class="form-group col-sm-12">
                        @Html.Label("SỐ HÀNG", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.SoHang, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txthang" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.Label("SỐ CỘT", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.SoCot, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txtcot" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.Label("TÌNH TRẠNG", new { @class = "control-label", id ="txtnamett" })
                        @Html.TextAreaFor(model => model.Status, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txttt" })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-success btn-sm" id="btnSave">Thêm</button>
            &nbsp; <button type="button" data-dismiss="modal" class="btn btn-warning btn-sm">Hủy</button>
        </div>
    </div>
</div>


