@model WebApplicationGPV.Models.PhongBan

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="textName"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="form-group col-sm-12">
                            @Html.Label("MÃ PHÒNG BAN", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.PB, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txtpb" })
                        </div>

                        <div class="form-group col-sm-12">
                            @Html.Label("TÊN", new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.TenBP, new { @class = "form-control", required = "required", placeholder = "Nhập giá trị...", id = "txtten" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-sm" id="btnSave">Thêm</button>
                <button type="button" class="btn btn-success btn-sm" id="btn-active">Xác nhận</button>
                &nbsp; <button type="button" data-dismiss="modal" class="btn btn-warning btn-sm">Hủy</button>
            </div>
        </div>
    </div>


